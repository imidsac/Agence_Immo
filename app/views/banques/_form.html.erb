<%= form_for @banque, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :nom, :class => 'control-label' %>
      <%= f.text_field :nom, :class => 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :compte, :class => 'control-label' %>
      <%= f.text_field :compte, :class => 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :solde, :class => 'control-label' %>
      <%= f.text_field :solde, :class => 'form-control' %>
  </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  banques_path, :class => 'btn' %>
  </div>
<% end %>
