<%= form_for @modalitepaiement, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :code, :class => 'control-label' %>
      <%= f.text_field :code, :class => 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :mode, :class => 'control-label' %>
      <%= f.text_field :mode, :class => 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label' %>
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :remise, :class => 'control-label' %>
      <%= f.text_field :remise, :class => 'form-control' %>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  modalitepaiements_path, :class => 'btn' %>
  </div>
<% end %>
