<%- model_class = Modalitepaiement -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @modalitepaiement.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mode) %>:</strong></dt>
  <dd><%= @modalitepaiement.mode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @modalitepaiement.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remise) %>:</strong></dt>
  <dd><%= @modalitepaiement.remise %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              modalitepaiements_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_modalitepaiement_path(@modalitepaiement), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              modalitepaiement_path(@modalitepaiement),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>
