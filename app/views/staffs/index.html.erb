<h1>Listing Staffs</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>First name</th>
      <th>Gender</th>
      <th>Date nai</th>
      <th>Lieu nai</th>
      <th>Nationality</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.first_name %></td>
        <td><%= staff.first_name %></td>
        <td><%= staff.gender %></td>
        <td><%= staff.date_nai %></td>
        <td><%= staff.lieu_nai %></td>
        <td><%= staff.nationality %></td>
        <td><%= staff.phone %></td>
        <td><%= staff.email %></td>
        <td><%= staff.address %></td>
        <td><%= staff.post %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

