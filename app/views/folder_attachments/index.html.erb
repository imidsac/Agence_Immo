<p id="notice"><%= notice %></p>

<h1>Listing Folder Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>File name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @folder_attachments.each do |folder_attachment| %>
      <tr>
        <td><%= folder_attachment.client %></td>
        <td><%= folder_attachment.file_name %></td>
        <td><%= link_to 'Show', folder_attachment %></td>
        <td><%= link_to 'Edit', edit_folder_attachment_path(folder_attachment) %></td>
        <td><%= link_to 'Destroy', folder_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Folder attachment', new_folder_attachment_path %>
