<%- model_class = Paiement -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:num) %></th>
      <th><%= model_class.human_attribute_name(:num_paie) %></th>
      <th><%= model_class.human_attribute_name(:owner_id) %></th>
      <th><%= model_class.human_attribute_name(:client_id) %></th>
      <th><%= model_class.human_attribute_name(:banque_id) %></th>
      <th><%= model_class.human_attribute_name(:condition_reg) %></th>
      <th><%= model_class.human_attribute_name(:type_paiement) %></th>
      <th><%= model_class.human_attribute_name(:motif) %></th>
      <th><%= model_class.human_attribute_name(:debit) %></th>
      <th><%= model_class.human_attribute_name(:credit) %></th>
      <th><%= model_class.human_attribute_name(:datepaiement) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @paiements.each do |paiement| %>
      <tr>
        <td><%= link_to paiement.id, paiement_path(paiement) %></td>
        <td><%= paiement.num %></td>
        <td><%= paiement.num_paie %></td>
        <td><%= paiement.owner_id %></td>
        <td><%= paiement.client_id %></td>
        <td><%= paiement.banque_id %></td>
        <td><%= paiement.condition_reg %></td>
        <td><%= paiement.type_paiement %></td>
        <td><%= paiement.motif %></td>
        <td><%= paiement.debit %></td>
        <td><%= paiement.credit %></td>
        <td><%= paiement.datepaiement %></td>
        <td><%= l paiement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_paiement_path(paiement), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      paiement_path(paiement),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_paiement_path,
            :class => 'btn btn-primary' %>
