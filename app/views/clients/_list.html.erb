<%- model_class = Client -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table id="clients" class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:codeclient) %></th>
    <th><%= model_class.human_attribute_name(:nom) %></th>
    <th><%= model_class.human_attribute_name(:prenom) %></th>
    <th><%= model_class.human_attribute_name(:sexe) %></th>
    <th><%= model_class.human_attribute_name(:nationalite) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @i=1
     @clients.each do |client| %>
      <tr>
        <td><%= @i %></td>
        <td><%= link_to client.codeclient, client_path(client) %></td>
        <td><%= client.nom %></td>
        <td><%= client.prenom %></td>
        <td><%= client.sexe %></td>
        <td><%= client.nationalite %></td>
        <td>
          <%= link_to t('.detail', :default => t("helpers.links.detail")),
                      client_path(client), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_client_path(client), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      client_path(client),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% @i+=1
     end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_client_path,
            :class => 'btn btn-primary' %>
